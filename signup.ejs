<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Sign up - MaiMusix</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      background-color: #1DB954;
      background-image: url("https://64.media.tumblr.com/bddc7ce339c4dff9b3fc940abd2bc112/9dd1ed7e6a3ca8be-62/s640x960/bbecc04e2e34db4b6b63585549b6e342ec19ee87.gifv");
      background-size: cover;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      background-color: rgba(0, 0, 0, 0.8);
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
      text-align: center;
      color: #fff;
      width: 400px;
    }
    .header {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #1DB954;
    }
    .gif {
      max-width: 100%;
      height: auto;
      margin-top: 20px;
    }
    .form-group {
      margin-bottom: 15px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }
    input[type="text"],
    input[type="password"],
    input[type="submit"],
    .button {
      height: 40px;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border: none;
      border-radius: 50px;
      outline: none;
      margin-bottom: 10px;
      box-sizing: border-box;
    }
    input[type="text"],
    input[type="password"],
    .input {
      background-color: rgba(255, 255, 255, 0.2);
      color: #fff;
      padding-left: 20px;
    }
    input[type="submit"],
    .button {
      background-color: #87CEEB;
      color: #fff;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    input[type="submit"]:hover,
    .button:hover {
      background-color: #4682B4;
    }
    .signup a,
    .login a {
      color: #1DB954;
      text-decoration: none;
    }
    .signup a:hover,
    .login a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">Signup</div>
    <form action="/signup" method="POST">
      <div class="form-group">
        <input type="text" name="username" class="input" placeholder="Enter your username" required>
      </div>
      <div class="form-group">
        <input type="password" name="password" class="input" placeholder="Create a password" required>
      </div>
      <div class="form-group">
        <input type="password" name="confirmPassword" class="input" placeholder="Confirm your password" required>
      </div>
      <div class="form-group">
        <input type="submit" class="button" value="Signup">
      </div>
    </form>
    <div class="signup">
      <span class="signup">Already have an account? <a href="/login">Login</a></span>
    </div>
  </div>
  <script>
    function changeBackground() {
      const body = document.body;
      body.style.backgroundImage = 'url("https://i.pinimg.com/originals/71/a1/f2/71a1f26cce044143eaf61055f725ded6.gif")';
    }
    // Play the second gif after 5 seconds
    setTimeout(changeBackground, 5000);
    const additionalGifs = [
      "https://www.usmagazine.com/wp-content/uploads/2019/11/giphy-7.gif?w=480&h=254&crop=1&quality=86&strip=all",
      "https://i.pinimg.com/originals/71/a1/f2/71a1f26cce044143eaf61055f725ded6.gif"
    ];
    function loadAdditionalGifs() {
      const backgroundUrl = additionalGifs.shift();
      if (backgroundUrl) {
        const body = document.body;
        body.style.backgroundImage = `url("${backgroundUrl}")`;
        setTimeout(loadAdditionalGifs, 5000); // Play next GIF after 5 seconds
      }
    }
    setTimeout(loadAdditionalGifs, 10000); 
  </script>
</body>
</html>